<% include partials/header %>
<div class="container-fluid container-interface">
    <div class="row">
        <div class="col-md-3">
            <div class="side-panel">
                <img class="gn-logo-interface" src="/images/gn-logo.png">
                <form action="/newNote" method="POST" id="new-note-form" target="new-note-iframe">
                    <div class="btn-new-note" onclick="document.getElementById('new-note-form').submit();setTimeout(function(){$('.side-panel').load('/ .side-panel > *');}, 15);">+ New Note</div>
                </form>
                <iframe id="new-note-iframe" name="new-note-iframe" style="display: none;"></iframe>
                <div class="btn-new-binder">New Binder</div>
                <div class="notes">
                    <%if (currentUser.notes.length > 0) {%>
                        <% currentUser.notes.forEach(function(note){ %>
                            <form action="/openNote" method="POST" id="open-note-<%=note._id%>-form" target="open-note-<%=note._id%>-iframe">
                                <div class="note-label" onclick="document.getElementById('open-note-<%=note._id%>-form').submit();setTimeout(function(){$('.note-interface').load('/ .note-interface > *');}, 15);">
                                    <% if (note.type == "Text") {%>
                                        <img class="note-label-icon" src="/images/document-icon.png">
                                    <%} else {%>
                                        <img class="note-label-icon" src="/images/microphone-icon.png">
                                    <%}%>
                                    <%=note.title%>
                                    <span class="note-label-date"><%=note.dateOfCreation%></span>
                                </div>
                                <textarea name="noteId" type="text" style="display: none;"><%=note._id%></textarea>
                            </form>
                            <iframe id="open-note-<%=note._id%>-iframe" name="open-note-<%=note._id%>-iframe" style="display: none;"></iframe>
                        <% }); %>
                    <%}%>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="note-interface">
                <%if (activeNote) {%>
                    <% currentUser.notes.forEach(function(note){ %>
                        <%if (note._id == activeNote) {%>
                           <!-- <form action="/updateNote" method="POST" id="update-note-form" target="update-note-iframe">-->
                                <input class="active-note-input active-note-title" name="noteTitle" type="text" placeholder="Title here" value="<%=note.title%>">
                                <hr style="margin: 0; background-color: Black; height: 1px;">
                                <textarea class="active-note-input active-note-body" name="noteBody" type="text" placeholder="Body here"><%=note.bodyText%></textarea>
                                <textarea id="active-note-id" name="noteId" type="text" style="display: none;"><%=note._id%></textarea>
                                <textarea class="active-user-id" name="userId" type="text" style="display: none;"><%=currentUser._id%></textarea>
                                <span><%=note.body%></span>
                 <!--            </form>
                            <iframe id="update-note-iframe" name="update-note-iframe" style="display: none;"></iframe>-->
                        <%}%>
                    <%});%>
                <%}%>
                <span class="text-save-status"></span>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>